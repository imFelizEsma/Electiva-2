<div class="container">
  <div class="row mt-5">
    {{#if personas}}
      <div class="col-md-3">
        <table class="text-center">
          <thead>
            <tr class="table-dark">
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Edad</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            {{#each}}
              <tr>
                <td>{{nombre}}</td>
                <td>{{apellido}}</td>
                <td>{{edad}}</td>
                <td>
                  <a href="#" class="btn btn-warning">Editar</a>
                  <a href="#" class="btn btn-success">Eliminar</a>
                </td>
              </tr>
            {{/each}}
          </tbody>
          <tfoot>
            <tr class="table-dark">
              <td colspan="4">REGISTRO DE PERSONAS</td>
            </tr>
          </tfoot>
        </table>
      </div>
    {{else}}
      <div class="card text-center mx-auto" style="width: 350px;">
        <div class="card-header">
          <h3>Debes crear una persona</h3>
        </div>
        <div class="card-body">
          <p>Presiona este boton para que puedas registrar a una persona en la
            aplicacion</p>
          <a href="#" class="btn btn-primary">Ir a crear</a>
        </div>
      </div>
    {{/if}}
  </div>
</div>